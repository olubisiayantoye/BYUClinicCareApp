@page "/doctorspublic"
@layout BYUClinicCareApp.Components.Layout.Web.WebLayout


<main>
    <section class="hero-title">
    <div class="container">
        <h1 class="text-cc-primary fw-bold">Meet Our Expert Medical Team</h1>
        <p class="lead">Highly skilled and compassionate doctors dedicated to your wellness.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4 text-center">
            
            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <img src="https://via.placeholder.com/150/1e74a6/ffffff?text=DS" class="rounded-circle mx-auto mb-3 border border-cc-primary p-1" alt="Dr. Smith">
                    <h5 class="card-title text-cc-primary fw-bold">Dr. John Smith</h5>
                    <p class="text-muted mb-1">General Physician (Head of Practice)</p>
                    <p class="small text-success">Available Mon-Fri</p>
                    <a href="book-online.html" class="btn btn-sm btn-cc-primary">Book Dr. Smith</a>
                </div>
            </div>
            
            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <img src="https://via.placeholder.com/150/28a745/ffffff?text=DA" class="rounded-circle mx-auto mb-3 border border-success p-1" alt="Dr. Alice">
                    <h5 class="card-title text-success fw-bold">Dr. Alice Chen</h5>
                    <p class="text-muted mb-1">Pediatrician</p>
                    <p class="small text-warning">Busy Today</p>
                    <a href="book-online.html" class="btn btn-sm btn-outline-success">View Schedule</a>
                </div>
            </div>

            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <img src="https://via.placeholder.com/150/6c757d/ffffff?text=DB" class="rounded-circle mx-auto mb-3 border border-secondary p-1" alt="Dr. Brown">
                    <h5 class="card-title text-secondary fw-bold">Dr. Emily Brown</h5>
                    <p class="text-muted mb-1">Cardiology Specialist</p>
                    <p class="small text-danger">On Leave</p>
                    <a href="#" class="btn btn-sm btn-outline-secondary disabled">Unavailable</a>
                </div>
            </div>

        </div>
    </div>
</section>
</main>
