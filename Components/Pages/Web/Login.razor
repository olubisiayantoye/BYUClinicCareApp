@page "/login"
@rendermode InteractiveServer
@layout BYUClinicCareApp.Components.Layout.Web.WebLogin
@inject NavigationManager Nav


<div class="login-wrapper">
    <div class="login-left">
        <div class="login-left-content">
            <img src="" alt="Modern Clinic Interface" class="img-fluid mb-4">
            <h2>Streamline Your Clinic Operations</h2>
            <p class="lead">
                ClinicCare empowers healthcare professionals with an intuitive platform for efficient queue management, precise appointment scheduling, and comprehensive patient care. Focus on what matters most: your patients.
            </p>
        </div>
    </div>

    <div class="login-right">
        <div class="login-form-container">
            <div class="text-center mb-4">
                <h1 class="cc-logo-form"><i class="fas fa-stethoscope me-2"></i> ClinicCare</h1>
                <p class="text-muted">Staff Login</p>
            </div>
            
         
                <div class="mb-3">
    <label for="username" class="form-label visually-hidden">Username / Employee ID</label>
    <div class="input-group input-group-lg">
        <span class="input-group-text"><i class="fas fa-user fa-fw"></i></span>
        <input type="text" class="form-control" @bind="Username" placeholder="Employee ID or Email" required />
    </div>
</div>

<div class="mb-4">
    <label for="password" class="form-label visually-hidden">Password</label>
    <div class="input-group input-group-lg">
        <span class="input-group-text"><i class="fas fa-lock fa-fw"></i></span>
        <input type="password" class="form-control" @bind="Password" placeholder="Password" required />
    </div>
</div>

<div class="d-grid gap-2 mb-3">
    <button class="btn btn-cc-primary btn-lg" @onclick="HandleLogin">
        <i class="fas fa-sign-in-alt me-2"></i> Secure Sign In
    </button>
</div>

<div class="text-center">
<p>Username: admin@byuclinicc.com (or EMP001)</p>
<p>Password: 123456</p>
    <a href="#" class="text-cc-primary text-decoration-none d-block mt-3 fw-bold">Forgot Password?</a>
</div>

            
        </div>
    </div>
</div>

@code {
    private string Username = "";
    private string Password = "";
    //private string Message = "";

    private void HandleLogin()
    {
         Console.WriteLine("DEBUG: HandleLogin clicked!");
         Console.WriteLine(Username);
         Console.WriteLine(Password);
        Nav.NavigateTo("/admin/dashboard", forceLoad: true);
    
    }
}