
@page "/services"
@layout BYUClinicCareApp.Components.Layout.Web.WebLayout

<main>
    <section class="hero-title">
    <div class="container">
        <h1 class="text-cc-primary fw-bold">Our Comprehensive Health Services</h1>
        <p class="lead">We are committed to providing experts care across multiple medical disciplines.</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            
            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <i class="fas fa-stethoscope fa-3x text-cc-primary mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">General Practice & Family Care</h5>
                        <p class="card-text">Annual physicals, sick visits, preventative medicine, and general health screenings for all ages.</p>
                        <a href="book-online.html" class="btn btn-sm btn-outline-cc-primary">Book Now</a>
                    </div>
                </div>
            </div>
            
            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <i class="fas fa-child fa-3x text-cc-primary mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Pediatrics</h5>
                        <p class="card-text">Specialized care for infants, children, and adolescents, including vaccinations and growth monitoring.</p>
                        <a href="book-online.html" class="btn btn-sm btn-outline-cc-primary">Book Now</a>
                    </div>
                </div>
            </div>
            
            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <i class="fas fa-notes-medical fa-3x text-cc-primary mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Diagnostic & Lab Services</h5>
                        <p class="card-text">On-site blood testing, X-rays, ECGs, and immediate lab result processing for faster diagnosis.</p>
                        <a href="contact.html" class="btn btn-sm btn-outline-cc-primary">Learn More</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card cc-card-public h-100 p-3">
                    <i class="fas fa-heartbeat fa-3x text-cc-primary mb-3"></i>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Chronic Disease Management</h5>
                        <p class="card-text">Long-term care plans for conditions like diabetes, hypertension, and asthma.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
</main>