@page "/admin/patients"
@layout BYUClinicCareApp.Components.Layout.Admin.AdminLayout


<div class="container-fluid py-4">
    <h2 class="mb-4 text-cc-primary" data-aos="fade-right"><i class="fas fa-user-injured me-2"></i> Patient Management</h2>

    <div class="row">
        <div class="col-lg-8 mb-4" data-aos="fade-up">
            <div class="card cc-card shadow">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-cc-primary">Registered Patients (345 Total)</h6>
                    <div class="input-group w-50">
                        <input type="text" class="form-control" placeholder="Search Patient by Name or ID..." aria-label="Search">
                        <button class="btn btn-cc-primary" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-hover align-middle">
                            <thead>
                                <tr>
                                    <th>Patient ID</th>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Last Visit</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>P00121</td>
                                    <td>**Maria Lopez**</td>
                                    <td>(555) 123-4567</td>
                                    <td>Today</td>
                                    <td><button class="btn btn-sm btn-outline-primary">View Record</button></td>
                                </tr>
                                <tr>
                                    <td>P00098</td>
                                    <td>David Kim</td>
                                    <td>(555) 987-6543</td>
                                    <td>1 month ago</td>
                                    <td><button class="btn btn-sm btn-outline-primary">View Record</button></td>
                                </tr>
                                <tr>
                                    <td>P00205</td>
                                    <td>Aisha Khan</td>
                                    <td>(555) 345-6789</td>
                                    <td>3 days ago</td>
                                    <td><button class="btn btn-sm btn-outline-primary">View Record</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4" data-aos="fade-left">
            <div class="card cc-card shadow">
                <div class="card-header bg-cc-light-blue py-3">
                    <h6 class="m-0 font-weight-bold text-cc-primary"><i class="fas fa-user-plus me-1"></i> Register New Patient</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="pFullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="pFullName" required>
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label for="pDOB" class="form-label">DOB</label>
                                <input type="date" class="form-control" id="pDOB">
                            </div>
                            <div class="col-6 mb-3">
                                <label for="pGender" class="form-label">Gender</label>
                                <select class="form-select" id="pGender">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="pPhone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="pPhone" placeholder="(555) 000-0000">
                        </div>
                        <button type="submit" class="btn btn-success w-100"><i class="fas fa-check me-2"></i> Register Patient</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
