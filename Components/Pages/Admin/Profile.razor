@page "/admin/profile"
@layout BYUClinicCareApp.Components.Layout.Admin.AdminLayout
       
       
<div class="container-fluid py-4">
    <h2 class="mb-4 text-cc-primary" data-aos="fade-right"><i class="fas fa-user-circle me-2"></i> My Profile</h2>

    <div class="row">
        <div class="col-lg-4 mb-4" data-aos="fade-up">
            <div class="card cc-card shadow h-100 text-center">
                <div class="card-body">
                    <img src="https://via.placeholder.com/150/1e74a6/ffffff?text=DS" class="rounded-circle mb-3 border border-cc-primary p-2" alt="Profile Picture">
                    <h4 class="card-title text-cc-primary">Dr. John Smith</h4>
                    <p class="text-muted">General Physician | Employee ID: DOC-45</p>
                    <hr>
                    <button class="btn btn-outline-secondary btn-sm"><i class="fas fa-camera me-1"></i> Change Photo</button>
                    <p class="mt-3"><span class="badge bg-success p-2"><i class="fas fa-shield-alt me-1"></i> Admin Access</span></p>
                </div>
            </div>
        </div>

        <div class="col-lg-8 mb-4" data-aos="fade-left">
            <div class="card cc-card shadow">
                <div class="card-header bg-cc-light-blue py-3">
                    <h6 class="m-0 font-weight-bold text-cc-primary">Update Details</h6>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" value="John">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" value="Smith">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="dr.smith@cliniccare.com" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" value="(555) 111-2222">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="specialization" class="form-label">Specialization</label>
                            <input type="text" class="form-control" id="specialization" value="General Physician">
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button type="button" class="btn btn-outline-danger"><i class="fas fa-lock me-2"></i> Change Password</button>
                            <button type="submit" class="btn btn-success"><i class="fas fa-save me-2"></i> Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
